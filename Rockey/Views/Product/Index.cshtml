@model IEnumerable<Rockey.Models.Product>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; Create New Product
                </a>
        </div>
    </div>
    <br /> <br />
    @if (Model.Count() >0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Application Type</th>
                    <th>Keys</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%">@item.Name</td>
                        <td width="10%">@item.Price</td>
                        <td width="20%">@item.Category.Name</td>
                        <td width="20%">@item.ApplicationType.Name</td>
                        <td class="text-certer">
                        <div class="w-100 btn-group" role="group">
                                <a asp-route-Id="@item.Id" asp-action="Upsert" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i> Update</a>
                                <a asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger"><i class="fa-regular fa-trash-can"></i> Delete</a>
                        </div>
                        </td>
                    </tr>   
                }
            </tbody>
        </table>   
    }
    else{
        <p>No Product exists</p>
    }
</div>


